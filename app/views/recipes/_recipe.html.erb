<div id="<%= dom_id recipe %>" >
  <%= link_to user_recipe_path(user_id: current_user.id, id: recipe.id), class: "recipe-item" do %>

  <div class="recipe-item-container">
    <div class='recipe-name-btn'> 
      <strong><%= recipe.name.upcase %></strong>
      
      <%= button_to 'remove', user_recipe_path(user_id: current_user.id, id: recipe.id), method: 'delete', onclick: "event.stopPropagation()" %>
      
    </div>

    <p> <%= "Description : #{(recipe.description + '. ') * 15}" %> </p>
  </div>

  <% end %>
    
</div>